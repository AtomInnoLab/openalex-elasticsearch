{
  "index_patterns": ["works-v18-*"],
  "template": {
    "settings": {
      "index": {
        "refresh_interval": "1h",
        "number_of_shards": 1,
        "auto_expand_replicas": "0-all",
        "analysis": {
          "normalizer": {
            "lower": {
              "filter": ["lowercase"]
            }
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "abstract": { "type": "text" },
        "alternate_host_venues": {
          "type": "nested",
          "properties": {
            "display_name": { "type": "keyword" },
            "id": { "type": "keyword" },
            "is_oa": { "type": "boolean" },
            "license": { "type": "keyword" },
            "type": { "type": "keyword" },
            "url": { "type": "keyword" },
            "version": { "type": "keyword" }
          }
        },
        "alternate_locations": {
          "type": "nested",
          "properties": {
            "is_best": { "type": "keyword", "index": false },
            "is_oa": { "type": "boolean", "index": false },
            "license": { "type": "keyword" },
            "url": { "type": "keyword" },
            "venue_id": { "type": "keyword" },
            "version": { "type": "keyword" }
          }
        },
        "authorships": {
          "type": "nested",
          "properties": {
            "author": {
              "properties": {
                "display_name": { "type": "keyword" },
                "id": { "type": "keyword" },
                "orcid": { "type": "keyword" }
              }
            },
            "author_position": { "type": "keyword" },
            "institutions": {
              "type": "nested",
              "properties": {
                "country_code": { "type": "keyword" },
                "display_name": { "type": "keyword" },
                "id": { "type": "keyword" },
                "ror": { "type": "keyword" },
                "type": { "type": "keyword" }
              }
            },
            "is_corresponding": { "type": "boolean" },
            "countries": { "type": "keyword" },
            "affiliations": { "type": "nested" },
            "raw_affiliation_strings": { "type": "keyword" },
            "country_ids": { "type": "keyword" },
            "raw_author_name": { "type": "keyword" }
          }
        },
        "biblio": { "type": "flattened", "index": false },
        "cited_by_api_url": { "type": "keyword", "index": false },
        "cited_by_count": { "type": "integer" },
        "concepts": {
          "type": "nested",
          "properties": {
            "display_name": { "type": "keyword", "index": false },
            "id": { "type": "keyword" },
            "level": { "type": "integer" },
            "score": { "type": "float" },
            "wikidata": { "type": "keyword" }
          }
        },
        "display_name": {
          "type": "text",
          "fields": {
            "complete": {
              "type": "completion",
              "analyzer": "simple",
              "preserve_separators": true,
              "preserve_position_increments": true,
              "max_input_length": 50
            },
            "keyword": { "type": "keyword" }
          }
        },
        "doi": { "type": "keyword", "index": false },
        "host_venue": {
          "properties": {
            "display_name": { "type": "keyword" },
            "id": { "type": "keyword" },
            "is_oa": { "type": "boolean" },
            "issn": { "type": "keyword" },
            "issn_l": { "type": "keyword" },
            "license": { "type": "keyword" },
            "publisher": {
              "properties": {
                "keyword": { "type": "keyword", "normalizer": "lower" }
              }
            },
            "type": { "type": "keyword" },
            "url": { "type": "keyword" },
            "version": { "type": "keyword" }
          }
        },
        "id": { "type": "keyword" },
        "ids": { "type": "object", "enabled": false },
        "is_paratext": { "type": "boolean" },
        "is_retracted": { "type": "boolean" },
        "mesh": { "type": "flattened", "index": false },
        "open_access": {
          "properties": {
            "is_oa": { "type": "boolean" },
            "oa_status": { "type": "keyword" },
            "oa_url": { "type": "keyword" }
          }
        },
        "publication_date": { "type": "date" },
        "publication_year": { "type": "integer" },
        "referenced_works": { "type": "keyword" },
        "references_count": { "type": "integer" },
        "related_works": { "type": "keyword", "index": false },
        "title": { "type": "keyword", "index": false },
        "type": { "type": "keyword" },
        "updated_date": { "type": "date", "index": false },
        "url": { "type": "keyword", "index": false },
        "primary_topic": {
          "properties": {
            "display_name": { "type": "keyword" },
            "id": { "type": "keyword" },
            "field": {
              "properties": {
                "display_name": { "type": "keyword" },
                "id": { "type": "keyword" }
              }
            },
            "subfield": {
              "properties": {
                "display_name": { "type": "keyword" },
                "id": { "type": "keyword" }
              }
            },
            "domain": {
              "properties": {
                "display_name": { "type": "keyword" },
                "id": { "type": "keyword" }
              }
            },
            "score": { "type": "float" }
          }
        },
        "topics": {
          "type": "nested",
          "properties": {
            "display_name": { "type": "keyword" },
            "id": { "type": "keyword" },
            "field": {
              "properties": {
                "display_name": { "type": "keyword" },
                "id": { "type": "keyword" }
              }
            },
            "subfield": {
              "properties": {
                "display_name": { "type": "keyword" },
                "id": { "type": "keyword" }
              }
            },
            "domain": {
              "properties": {
                "display_name": { "type": "keyword" },
                "id": { "type": "keyword" }
              }
            },
            "score": { "type": "float" }
          }
        },
        "keywords": {
          "type": "nested",
          "properties": {
            "id": { "type": "keyword" },
            "display_name": { "type": "keyword" },
            "score": { "type": "float" }
          }
        }
      }
    },
    "aliases": {}
  }
}